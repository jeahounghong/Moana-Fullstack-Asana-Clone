<!DOCTYPE html>
<html>
  <head>
    <title>Moana</title>
    <%= favicon_link_tag asset_path('favicon.ico') %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script src="https://kit.fontawesome.com/5a3260456f.js" crossorigin="anonymous"></script>
    <script type="text/javascript">
        window.logo = "<%= image_url('logo.png') %>"
        window.background = "<%= image_url('background.jpeg') %>"
        window.darklogo = "<%= image_url('logo-dark.png') %>"
    </script>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
